<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragmentInfoAppbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/fragmentInfoCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarWikipedia"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/black_100"
            app:title="@string/app_name"
            >

            <ImageView
                android:id="@+id/fragmentInfoHeaderImage"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                app:layout_collapseMode="parallax"
                />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/fragmentInfoToolBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_collapseMode="pin"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragmentInfoNestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        >

        <LinearLayout
            android:id="@+id/fragmentInfoNestedLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <TextView
                android:id="@+id/fragmentInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/red_dead"
                android:textSize="24sp"
                android:textColor="@color/black_200"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/fragmentInfoSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_game"
                android:textSize="16sp"
                android:textColor="@color/gray_white"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/fragmentInfoContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_info"
                android:textSize="17sp"
                android:textColor="@color/black_100"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragmentInfoFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/open_link"
        app:srcCompat="@drawable/ic_baseline_link_24"
        app:tint="@color/white"
        app:backgroundTint="@color/blue"
        app:useCompatPadding="true"
        app:layout_anchor="@id/fragmentInfoAppbarLayout"
        app:layout_anchorGravity="bottom|end"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>